{
    "compilerOptions": {
      "target": "es5",
      "rootDir": "src",
      "outDir": "dist/main",
      "moduleResolution": "node",
      "module": "commonjs",
      "declaration": true,
      "inlineSourceMap": true,
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "jsx": "react",
      /* Debugging Options */
      "traceResolution": false,
      "listEmittedFiles": false,
      "listFiles": false,
      "pretty": true,
      "lib": [
        "esnext",
        "dom"
      ]
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
    ],
    "compileOnSave": false
  }
  